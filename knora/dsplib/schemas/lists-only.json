{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://dasch.swiss/schema/lists-only.json",
    "title": "JSON schema for DSP lists",
    "description": "JSON schema for the lists section used in DSP ontologies",
    "definitions": {
        "langstring": {
            "type": "object",
            "patternProperties": {
                "^(en|de|fr|it|rm)$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "label": {
            "$ref": "#/definitions/langstring"
        },
        "comment": {
            "type": "object",
            "patternProperties": {
                "^(en|de|fr|it|rm)$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "node": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "labels": {
                    "$ref": "#/definitions/label"
                },
                "comments": {
                    "$ref": "#/definitions/comment"
                },
                "nodes": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/node"
                    }
                }
            },
            "required": [
                "name",
                "labels"
            ],
            "additionalProperties": false
        },
        "excelfolderref": {
            "type": "object",
            "properties": {
                "folder": {
                    "type": "string"
                }
            },
            "required": [
                "folder"
            ]
        }
    },
    "type": "object",
    "properties": {
        "lists": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "labels": {
                        "$ref": "#/definitions/label"
                    },
                    "comments": {
                        "$ref": "#/definitions/comment"
                    },
                    "nodes": {
                        "oneOf": [
                            {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/node"
                                }
                            },
                            {
                                "type": "object",
                                "$ref": "#/definitions/excelfolderref"
                            }
                        ]
                    }
                },
                "required": ["name", "labels", "comments", "nodes"],
                "additionalProperties": false
            }
        }
    }
}
