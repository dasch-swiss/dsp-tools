{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://knora.org/pyknora/ontology/knora-schema.json",
  "title": "Knora JSON schema",
  "description": "JSON Schema for Knora ontologies",

  "definitions": {
    "label": {
      "type": "object",
      "patternProperties": {
        "^(en|de|fr|it)": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": "object",
      "patternProperties": {
        "^(en|de|fr|it)": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "comment": {
      "type": "object",
      "patternProperties": {
        "^(en|de|fr|it)": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "node": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "labels": {
          "$ref": "#/definitions/label"
        },
        "comments": {
          "$ref": "#/definitions/comment"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/node"
          }
        }
      },
      "required": [
        "name",
        "labels"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "shortcode": {
          "type": "string",
          "pattern": "^[0-9A-F]{4}$"
        },
        "lists": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/node"
          }
        }
      },
      "required": ["shortcode", "lists"],
      "additionalProperties": false
    }
  },
  "required": ["project"],
  "additionalProperties": false
}