@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:        <http://www.w3.org/2002/07/owl#> .
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .

@prefix knora-api:  <http://api.knora.org/ontology/knora-api/v2#> .
@prefix val-shapes: <http://api.knora.org/val-shapes-shapes/v2#> .

@prefix ex: <http://api.knora.org/data#> .

@prefix onto:        <http://0.0.0.0:3333/ontology/9999/onto/v2#> .
@prefix onto-shapes: <http://0.0.0.0:3333/ontology/9999/onto-shapes/v2#> .

# SubClasses etc must be declared on the data graph for pyshacl,
#    because it only does rdfs inference on the data graph.
val-shapes:OntoClass a owl:Class .

val-shapes:SubClass a owl:Class ;
  rdfs:subClassOf val-shapes:OntoClass .


ex:NumberGood a knora-api:IntValue ;
  knora-api:intValueAsInt "123" .

ex:NumberBad a knora-api:IntValue ;
  knora-api:intValueAsInt "sadf" .

########################################

ex:StringGood a knora-api:TextValue ;
  knora-api:valueAsString "sdaf" .


ex:StringBad1 a knora-api:TextValue ;
  knora-api:valueAsString 1 .

ex:StringBad2 a knora-api:TextValue ;
  knora-api:valueAsString "" .

########################################

ex:ListValueGood a knora-api:ListValue ;
  knora-api:listValueAsListNode "Node" ;
  val-shapes:hasListName "List" .


ex:ListValueBadNode a knora-api:ListValue ;
  knora-api:listValueAsListNode "wrong" ;
  val-shapes:hasListName "List" .


ex:ListValueBadList a knora-api:ListValue ;
  knora-api:listValueAsListNode "Node" ;
  val-shapes:hasListName "wrong" .


ex:LinkValueBad a knora-api:LinkValue ;
  knora-api:linkValueHasTargetIri ex:StringBad1 .


ex:LinkValueGood a knora-api:LinkValue ;
  knora-api:linkValueHasTargetIri ex:target .

ex:target a val-shapes:OntoClass .


ex:LinkValueGoodSubClass a knora-api:LinkValue ;
  knora-api:linkValueHasTargetIri ex:targetSubClass .

ex:targetSubClass a val-shapes:SubClass .




ex:typeViolation a onto:CardOneResource ;
  onto:hasSimpleText ex:wrongType .


ex:wrongType a knora-api:IntValue ;
  knora-api:intValueAsInt "1111" .
