                     [ a sh:PropertyShape ;
                       sh:path knora-api:hasColor ;
                       sh:minCount 1 ;
                       sh:maxCount 1 ;
                       sh:severity sh:Violation ;
                       sh:message "Cardinality 1" ;
                     ] ,
                     [ a sh:PropertyShape ;
                       sh:path knora-api:isRegionOf ;
                       sh:minCount 1 ;
                       sh:maxCount 1 ;
                       sh:severity sh:Violation ;
                       sh:message "Cardinality 1" ;
                     ] ,
                     [ a sh:PropertyShape ;
