@prefix sh:         <http://www.w3.org/ns/shacl#> .
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:        <http://www.w3.org/2002/07/owl#> .
@prefix knora-api:  <http://api.knora.org/ontology/knora-api/v2#> .

@prefix api-shapes: <http://api.knora.org/ontology/knora-api/shapes/v2#> .


api-shapes:FindMissingMaxCardinality_IsPartOf_OntologyShape
  a              sh:NodeShape ;
  sh:targetClass owl:Class ;
  sh:sparql      [
                   a          sh:SPARQLConstraint ;
                   sh:message "isPartOf and its sub-properties must either have cardinality 1 or 0-1." ;
                   sh:select  """
                    PREFIX owl: <http://www.w3.org/2002/07/owl#>
                    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
                    PREFIX knora-api: <http://api.knora.org/ontology/knora-api/v2#>

                    SELECT $this WHERE {
                        $this a owl:Class ;
                              rdfs:subClassOf ?restriction .
                        ?restriction a owl:Restriction ;
                                     owl:onProperty ?propName .

                        ?propName rdfs:subPropertyOf* knora-api:isPartOf

                        FILTER NOT EXISTS {
                            ?restriction owl:maxCardinality|owl:cardinality 1
                        }
                    }
                    """ ;
                 ] ;
  sh:severity    sh:Violation .



