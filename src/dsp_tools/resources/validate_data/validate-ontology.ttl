api-shapes:FindCardinalityOneMismatch_OntologyShape
  a              sh:NodeShape ;
  sh:targetClass owl:Class ;
  sh:sparql      [
                   a          sh:SPARQLConstraint ;
                   sh:message "The cardinalities for seqnum and isPartOf must be identical within one resource class." ;
                   sh:select  """
                    PREFIX owl: <http://www.w3.org/2002/07/owl#>
                    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
                    PREFIX knora-api: <http://api.knora.org/ontology/knora-api/v2#>

                    SELECT $this ?path WHERE {

                        $this a owl:Class ;
                              rdfs:subClassOf ?restrictionIsPartOf .
                        ?restrictionIsPartOf a owl:Restriction ;
                                             owl:onProperty ?path ;
                                             owl:cardinality 1 .
                        ?path rdfs:subPropertyOf* knora-api:isPartOf .

                        $this a owl:Class ;
                              rdfs:subClassOf ?restrictionSeqnum .
                        ?restrictionSeqnum a owl:Restriction ;
                                           owl:onProperty ?seqnumProp .
                        ?seqnumProp rdfs:subPropertyOf* knora-api:seqnum .

                        FILTER NOT EXISTS {
                            ?restrictionSeqnum owl:cardinality 1 .
                        }
                    }
                    """ ;
                 ] ;
  sh:severity    sh:Violation .


