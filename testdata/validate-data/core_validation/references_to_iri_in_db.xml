<?xml version='1.0' encoding='utf-8'?>

<knora xmlns="https://dasch.swiss/schema"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="https://dasch.swiss/schema ../../../src/dsp_tools/resources/schema/data.xsd"
       shortcode="9999"
       default-ontology="onto">

    <!--
    These resources reference resource IRIs.
    If they exist in the database then they should not produce an error.
    Otherwise, they must produce a violation.
    -->

    <resource label="Link" restype=":ClassWithEverything" id="link_to_resource_in_db">
        <resptr-prop name=":testHasLinkToCardOneResource">
            <resptr>http://rdfh.ch/9999/iri-from-resource-in-db</resptr>
        </resptr-prop>
    </resource>

    <resource label="Richtext" restype=":ClassWithEverything" id="richtext_with_standoff_to_resource_in_db">
        <text-prop name=":testRichtext">
            <text encoding="xml">
                Text with
                <a class="salsah-link" href="http://rdfh.ch/9999/iri-from-resource-in-db">stand off</a>
                to resource in DB.
            </text>
        </text-prop>
    </resource>

    <!-- These resources reference an IRI which does not exist in the database -->
    <resource label="Link" restype=":ClassWithEverything" id="link_to_resource_in_db_which_does_not_exist">
        <resptr-prop name=":testHasLinkToCardOneResource">
            <resptr>http://rdfh.ch/9999/resource-does-not-exist</resptr>
        </resptr-prop>
    </resource>

    <resource label="Richtext" restype=":ClassWithEverything" id="richtext_with_standoff_to_resource_in_db_which_does_not_exist">
        <text-prop name=":testRichtext">
            <text encoding="xml">
                Text with
                <a class="salsah-link" href="http://rdfh.ch/9999/resource-does-not-exist">stand off</a>
                to resource in DB.
            </text>
        </text-prop>
    </resource>

    <!-- It is permissible to reference resources from an id2iri mapping. -->
    <resource label="Link" restype=":ClassWithEverything" id="link_to_resource_from_id2iri_mapping">
        <resptr-prop name=":testHasLinkToCardOneResource">
            <resptr>id_in_mapping</resptr>
        </resptr-prop>
    </resource>

    <resource label="Richtext" restype=":ClassWithEverything" id="richtext_with_standoff_to_resource_from_id2iri_mapping">
        <text-prop name=":testRichtext">
            <text encoding="xml">
                Text with
                <a class="salsah-link" href="IRI:id_in_mapping:IRI">stand off</a>
                to resource in DB.
            </text>
        </text-prop>
    </resource>

</knora>
